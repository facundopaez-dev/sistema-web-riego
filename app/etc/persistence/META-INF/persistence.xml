<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
  <persistence-unit name="swcar">
    <jta-data-source>jdbc/swcar</jta-data-source>
    <class>model.AccountActivationLink</class>
    <class>model.ClimateRecord</class>
    <class>model.Crop</class>
    <class>model.PlantingRecordStatus</class>
    <class>model.PlantingRecord</class>
    <class>model.IrrigationRecord</class>
    <class>model.Latitude</class>
    <class>model.MaximumInsolation</class>
    <class>model.Month</class>
    <class>model.Option</class>
    <class>model.Parcel</class>
    <class>model.PasswordResetLink</class>
    <class>model.Region</class>
    <class>model.Session</class>
    <class>model.SolarRadiation</class>
    <class>model.StatisticalReport</class>
    <class>model.TypeCrop</class>
    <class>model.TypePrecipitation</class>
    <class>model.User</class>
    <class>model.SecretKey</class>
    <properties>
      <property name="eclipselink.target-database" value="DERBY"/>
      <property name="eclipselink.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="eclipselink.jdbc.url" value="jdbc:derby://localhost:1527/swcar"/>
      <property name="eclipselink.jdbc.user" value="APP"/>
      <property name="eclipselink.jdbc.password" value="APP"/>
      <!-- <property name="eclipselink.logging.level" value="ALL" /> -->
      <!-- <property name="eclipselink.logging.level" value="FINE" /> -->
      <property name="eclipselink.logging.level" value="SEVERE" />
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
    </properties>
  </persistence-unit>
</persistence>
