        <pathelement location="../lib/java-jwt-4.2.1.jar" />
        <pathelement location="../lib/jackson-databind-2.13.4.2.jar" />
        <pathelement location="../lib/jackson-core-2.13.4.jar" />
        <pathelement location="../lib/jackson-annotations-2.13.4.jar" />
      </classpath>
    </javac>
  </target>

  <target name="run_test" depends="build_tests">
    <junit printsummary="on" haltonfailure="yes" fork="true">
      <classpath>
        <pathelement path="${JEE_CLASSPATH}" />
        <pathelement path="${ECLIPSELINK_CLASSPATH}" />
        <pathelement path="${JPA_CLASSPATH}" />
